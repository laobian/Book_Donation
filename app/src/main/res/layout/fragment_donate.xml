<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#eee">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#fff"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_project_donate"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_picture_add"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="添加项目图片"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textAlignment="gravity"
                android:gravity="left"
                />

        </LinearLayout>
        <EditText
            android:id="@+id/et_project_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="#fff"
            android:hint="项目名称(必填)，2-15个字"
            android:paddingLeft="20dp"/>
        <EditText
            android:id="@+id/et_project_description"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="12dp"
            android:background="#fff"
            android:hint="项目描述(必填)，填写需要书籍的理由，当地儿童阅读现状等"
            android:paddingLeft="20dp"
            android:textAlignment="gravity"
            android:gravity="left"
            android:padding="20dp"/>
        <EditText
            android:id="@+id/et_book_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="需要书籍的名称(必填)"
            android:background="#fff"
            android:paddingLeft="20dp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/et_need_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="需要书籍的数量(必填)"
            android:background="#fff"
            android:paddingLeft="20dp"
            android:layout_marginTop="12dp"/>
        <Button
            android:id="@+id/btn_submission"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/circle"
            android:layout_margin="20dp"
            android:text="发      布"
            android:textSize="26sp"
            android:textColor="#fff"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>


